    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const chartColors = ['#D97706', '#FB923C', '#FDBA74'];

            const createDonutChart = (ctx, labels, data, title) => {
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: title,
                            data: data,
                            backgroundColor: chartColors,
                            borderColor: '#F8F7F4',
                            borderWidth: 4,
                            hoverOffset: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '60%',
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 20,
                                    font: {
                                        family: "'Inter', sans-serif"
                                    }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed !== null) {
                                            label += context.parsed + '%';
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            };

            const googleCtx = document.getElementById('googleAdsChart')?.getContext('2d');
            if (googleCtx) {
                createDonutChart(googleCtx, ['Google Shopping', 'Google Search'], [65, 35], 'Presupuesto Google Ads'); /* Adjusted for positioning focus */
            }

            const metaCtx = document.getElementById('metaAdsChart')?.getContext('2d');
            if (metaCtx) {
                createDonutChart(metaCtx, ['Remarketing Dinámico', 'Audiencias Similares'], [70, 30], 'Presupuesto Meta Ads');
            }
            
            const mobileNav = document.getElementById('mobile-nav');
            if(mobileNav) {
                mobileNav.addEventListener('change', (e) => {
                    if(e.target.value && e.target.value !== '#') {
                        window.location.href = e.target.value;
                    }
                });
            }

            // Function to scroll to a section
            window.scrollToSection = (id) => {
                const element = document.getElementById(id);
                if (element) {
                    element.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                    }
                });
            }, {
                threshold: 0.1
            });

            document.querySelectorAll('.fade-in').forEach(el => {
                observer.observe(el);
            });

            // Adjust remarketing lines based on element positions
            const adjustRemarketingLines = () => {
                const salesPageBox = document.getElementById('sales-page-box');
                const remarketingPathContainer = document.getElementById('remarketing-path-container');
                const line1 = document.getElementById('remarketing-line-1');
                const line2 = document.getElementById('remarketing-line-2');
                const line3 = document.getElementById('remarketing-line-3');
                const line4 = document.getElementById('remarketing-line-4');

                if (salesPageBox && remarketingPathContainer && line1 && line2 && line3 && line4) {
                    const salesRect = salesPageBox.getBoundingClientRect();
                    const remarketingRect = remarketingPathContainer.getBoundingClientRect();
                    const containerRect = salesPageBox.closest('.new-funnel-container').getBoundingClientRect();

                    const salesCenterX = salesRect.left + salesRect.width / 2 - containerRect.left;
                    const salesBottomY = salesRect.bottom - containerRect.top;
                    const remarketingTopY = remarketingRect.top - containerRect.top;
                    const remarketingLeftX = remarketingRect.left - containerRect.left;
                    const remarketingRightX = remarketingRect.right - containerRect.left;
                    const remarketingCenterY = remarketingRect.top + remarketingRect.height / 2 - containerRect.top;

                    // Ensure the main funnel path is positioned to allow vertical lines to drop
                    const mainPathRect = salesPageBox.closest('.funnel-main-path').getBoundingClientRect();
                    const mainPathRelativeBottom = mainPathRect.bottom - containerRect.top;


                    if (window.innerWidth >= 768) { // Desktop layout
                        // Line down from Sales Page to horizontal remarketing entry
                        line1.style.cssText = `
                            left: ${salesCenterX}px;
                            top: ${salesBottomY}px;
                            height: ${(remarketingTopY + remarketingRect.height/2) - salesBottomY}px;
                            width: 2px;
                            transform: none;
                        `;
                        line1.classList.remove('hidden');

                        // Horizontal line to Remarketing block start
                        line2.style.cssText = `
                            left: ${salesCenterX}px;
                            top: ${remarketingCenterY}px;
                            width: ${remarketingLeftX - salesCenterX}px;
                            transform: none;
                        `;
                        line2.classList.remove('hidden');

                        // Vertical line from right of Remarketing block back up to Sales Page (this might need adjustment depending on how it connects to sales page in diagram)
                        // This line intends to connect the far right of the remarketing path back up to the sales page's vertical center.
                        line3.style.cssText = `
                            left: ${remarketingRightX}px;
                            top: ${remarketingCenterY}px;
                            height: ${salesRect.top - containerRect.top + (salesRect.height/2) - remarketingCenterY}px; /* Adjusted to reach mid-height of sales page */
                            width: 2px;
                            transform: none;
                        `;
                        line3.classList.remove('hidden');

                        // Horizontal line from end of Remarketing loop back to Sales Page
                        line4.style.cssText = `
                            left: ${salesCenterX}px;
                            top: ${salesRect.top - containerRect.top + (salesRect.height/2)}px; /* Align with middle of sales page */
                            width: ${remarketingRightX - salesCenterX}px;
                            transform: none;
                        `;
                        line4.classList.remove('hidden');

                    } else { // Mobile layout (vertical flow) - lines should be hidden or adjusted if needed
                        line1.classList.add('hidden');
                        line2.classList.add('hidden');
                        line3.classList.add('hidden');
                        line4.classList.add('hidden');
                    }
                }
            };

            // Call on load and resize
            adjustRemarketingLines();
            window.addEventListener('resize', adjustRemarketingLines);
            // Also call after potential content changes that might shift elements
            setTimeout(adjustRemarketingLines, 500); // Small delay to ensure elements are rendered
        });
    </script>
</body>
</html>
